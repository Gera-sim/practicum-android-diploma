<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="filterEditText">
        <item name="android:layout_height">@dimen/margin_60</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">104dp</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_24</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/job</item>
        <item name="android:background">@null</item>
        <item name="android:drawableEnd">@drawable/arrow_forward</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="filterEditText2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="filterTextField">
        <item name="android:layout_height">@dimen/margin_60</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/margin_80</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_24</item>
        <item name="android:paddingTop">@dimen/margin_4</item>
        <item name="android:inputType">text</item>
        <item name="hintTextAppearance">@style/Text_Regular_16_400</item>
        <item name="android:textColorHint">@drawable/hint_color_selector</item>
        <item name="boxBackgroundMode">none</item>
        <item name="android:enabled">false</item>
        <item name="android:textAppearance">@style/Text_Regular_16_400</item>
        <item name="android:singleLine">true</item>
    </style>

    //готовые блоки текстовых атрибутов для приложения
    <style name="Text_Bold_32_700" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_32sp</item>
        <item name="fontWeight">700</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
    </style>
    <style name="Text_Medium_22_500" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_22sp</item>
        <item name="fontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="Text_Medium_16_500" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="fontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="Text_Regular_16_400" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_16sp</item>
        <item name="fontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="Text_Regular_12_400" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="fontWeight">400</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="guideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="rounded_12">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/corner_radius_12</item>
    </style>
    <style name="bottom_nav_text">
        <item name="android:textSize">@dimen/text_12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
</resources>